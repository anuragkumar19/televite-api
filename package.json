{
    "name": "televite-api",
    "version": "1.0.0",
    "description": "Fast web communication",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "watch": "tsc -w",
        "dev:start": "nodemon --ignore src dist/index.js",
        "dev": "concurrently \"npm run watch\" \"npm run dev:start\"",
        "start": "node dist/index.js",
        "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
        "seed": "node dist/seeder"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anuragkumar19/televite-api.git"
    },
    "keywords": [
        "express",
        "socket.io",
        "messaging",
        "televite",
        "communicate"
    ],
    "author": "Anurag Kumar <https://github.com/anuragkumar19>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/anuragkumar19/televite-api/issues"
    },
    "homepage": "https://github.com/anuragkumar19/televite-api#readme",
    "dependencies": {
        "colors": "^1.4.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv-safe": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "joi": "^17.4.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.13.3",
        "morgan": "^1.10.0",
        "nodemailer": "^6.6.3",
        "sentence-case": "^3.0.4",
        "socket.io": "^4.1.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/ejs": "^3.0.7",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/morgan": "^1.9.3",
        "@types/node": "^15.14.2",
        "@types/nodemailer": "^6.4.4",
        "@types/supertest": "^2.0.11",
        "concurrently": "^6.2.0",
        "gen-env-types": "^1.3.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.12",
        "supertest": "^6.1.4",
        "typescript": "^4.3.5"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/"
        ],
        "testTimeout": 30000
    }
}
